#include <stdio.h>
#include <stdlib.h>

struct Node {
    int data;
    struct Node* next;
};

struct Node* createNode(int data) {
    struct Node* temp = (struct Node*)malloc(sizeof(struct Node));
    if (temp == NULL) {
        printf("Memory allocation failed\n");
        return NULL;
    }
    temp->data = data;
    temp->next = NULL;
    return temp;
}

void insertAtEnd(struct Node** start, int data) {
    struct Node* temp = createNode(data);

    if (*start == NULL) {
        *start = temp;
        return;
    }

    struct Node* ptr = *start;
    while (ptr->next != NULL)
        ptr = ptr->next;

    ptr->next = temp;
}

void display(struct Node* start) {
    struct Node* ptr = start;
    while (ptr != NULL) {
        printf("%d -> ", ptr->data);
        ptr = ptr->next;
    }
    printf("NULL\n");
}

int isPalindrome(struct Node* start) {
    int arr[100];
    int i = 0;

    struct Node* ptr = start;
    while (ptr != NULL) {
        arr[i++] = ptr->data;
        ptr = ptr->next;
    }

    int l = 0, r = i - 1;
    while (l < r) {
        if (arr[l] != arr[r])
            return 0;
        l++;
        r--;
    }
    return 1;
}

int main() {
    struct Node* start = NULL;

    insertAtEnd(&start, 1);
    insertAtEnd(&start, 2);
    insertAtEnd(&start, 3);
    insertAtEnd(&start, 2);
    insertAtEnd(&start, 1);

    printf("Linked List:\n");
    display(start);

    if (isPalindrome(start))
        printf("Linked List is a Palindrome\n");
    else
        printf("Linked List is NOT a Palindrome\n");

    return 0;
}
